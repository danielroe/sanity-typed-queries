{
  "name": "sanity-typed-queries",
  "version": "0.9.5",
  "packageManager": "pnpm@10.28.2",
  "description": "A collection of helper functions to improve the typing of Sanity resources.",
  "author": {
    "name": "Daniel Roe <daniel@roe.dev>",
    "url": "https://github.com/danielroe"
  },
  "license": "MIT",
  "repository": "danielroe/sanity-typed-queries",
  "keywords": [
    "sanity",
    "typescript",
    "library",
    "groq"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "!**/*.map",
    "dist/**/*",
    "dist/index.d.ts"
  ],
  "scripts": {
    "build": "unbuild",
    "lint": "pnpm eslint .",
    "dev:prepare": "pnpm build --stub",
    "prepare": "simple-git-hooks && pnpm build",
    "prepublishOnly": "pnpm lint && pnpm test",
    "release": "bumpp && npm publish",
    "test": "pnpm test:types && pnpm test:unit",
    "test:types": "tsc --noEmit",
    "test:unit": "vitest run"
  },
  "devDependencies": {
    "@antfu/eslint-config": "4.19.0",
    "@typescript-eslint/eslint-plugin": "8.54.0",
    "@typescript-eslint/parser": "8.54.0",
    "@vitest/coverage-v8": "4.0.18",
    "bumpp": "10.4.0",
    "conventional-changelog-conventionalcommits": "9.1.0",
    "esbuild": "0.27.2",
    "eslint": "9.39.2",
    "expect-type": "0.20.0",
    "groq": "5.7.0",
    "lint-staged": "16.2.7",
    "resolve": "1.22.11",
    "semver": "7.7.3",
    "simple-git-hooks": "2.13.1",
    "typescript": "5.9.3",
    "unbuild": "3.6.1",
    "vite": "7.3.1",
    "vitest": "4.0.18"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": [
      "pnpm eslint --fix"
    ]
  }
}
