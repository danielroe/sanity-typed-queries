{
  "name": "sanity-typed-queries",
  "version": "0.7.5",
  "description": "A collection of helper functions to improve the typing of Sanity resources.",
  "keywords": [
    "sanity",
    "typescript",
    "library",
    "groq"
  ],
  "repository": "danielroe/sanity-typed-queries",
  "license": "MIT",
  "contributors": [
    {
      "name": "Daniel Roe <daniel@roe.dev>",
      "url": "https://github.com/danielroe"
    }
  ],
  "sideEffects": false,
  "main": "lib/index.js",
  "module": "lib/index.es.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*",
    "lib/index.d.ts",
    "!**/*.map"
  ],
  "scripts": {
    "build": "yarn clean && yarn compile",
    "clean": "rm -rf lib/*",
    "compile": "siroc build",
    "lint": "yarn lint:all:eslint && yarn lint:all:prettier",
    "lint:all:eslint": "yarn lint:eslint --ext .js,.ts .",
    "lint:all:prettier": "yarn lint:prettier \"**/*.{js,json,ts}\"",
    "lint:eslint": "eslint --fix",
    "lint:prettier": "prettier --write --loglevel warn",
    "prepare": "husky install && yarn build",
    "prepublishOnly": "yarn lint && yarn test && pinst --disable",
    "release": "release-it",
    "test": "yarn test:types && yarn test:unit",
    "test:types": "yarn tsc --noEmit",
    "test:unit": "vitest",
    "postinstall": "husky install",
    "postpublish": "pinst --enable"
  },
  "resolutions": {
    "minimist": ">=1.2.5"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^4.2.0",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "c8": "^7.11.0",
    "codecov": "^3.8.3",
    "conventional-changelog-conventionalcommits": "^4.6.3",
    "esbuild": "0.14.23",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "expect-type": "^0.13.0",
    "groq": "^2.15.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.4",
    "pinst": "^3.0.0",
    "prettier": "^2.5.1",
    "release-it": "^14.12.5",
    "semver": "^7.3.5",
    "siroc": "^0.16.0",
    "typescript": "^4.5.5",
    "vite": "^2.8.5",
    "vitest": "^0.5.8"
  }
}
